<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="squispeS2A.Views.vElementos"
             Title="vElementos">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="Semana 2 - Elemento GUI"
            FontSize="2"
            TextColor="SkyBlue"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Picker x:Name="pkPaises"
                Title="Paises">
            <Picker.Items>
                <x:String>Ecuador</x:String>
                <x:String>Corea</x:String>
                <x:String>Tailandia</x:String>
                <x:String>Jap√≥n</x:String>
            </Picker.Items>
        </Picker>
        <Button x:Name="btnPaises"
                Text="Pais"
                Clicked="btnPaises_Clicked">
            
        </Button>
        <DatePicker x:Name="fecha"
                    Format="MM/dd/yyyy"/>
        <Button x:Name="btnFecha"
                Text="Ver fecha"
                Clicked="btnFecha_Clicked"/>
    </VerticalStackLayout>
</ContentPage>